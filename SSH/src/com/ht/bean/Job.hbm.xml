<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.ht.bean">
	<class name="Job" table="t_job"> 
		<id name="jobId" column="jobid"> 
            <generator class="uuid.hex"/> 
        </id>
		<property name="company" column="company"></property>
        <property name="jobTitle" column="jobtitle"></property>
		<property name="salary" column="salary"></property>
		<property name="welfare" column="welfare"></property>
		<property name="address" column="address"></property>
        <property name="comPhone" column="comphone"></property>
		<property name="hireDay" column="hireday"></property>
		<property name="status" column="status"></property>
		
		<many-to-one name="stu" column="stuid" class="com.ht.bean.Stu" fetch="join"></many-to-one>
	</class>
</hibernate-mapping>
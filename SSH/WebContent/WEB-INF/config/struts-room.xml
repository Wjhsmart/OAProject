<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<package name="room-struts" extends="my-struts" namespace="/room">
		<action name="*" class="com.ht.action.RoomAction" method="{1}">
			<result name="pager" type="json"></result>
			<result name="save" type="json"></result>
			<result name="update" type="json"></result>
			<result name="id" type="json"></result>
			<result name="all" type="json"></result>
			<result name="status" type="json"></result>
			<result name="fuzzySearch" type="json"></result>
		</action>
	</package>
</struts>